<section class='home-container'>
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
      <% @groups.each do |g| %>
        <div class="col-md-4">
          
          <img src= <%= g.icon %> alt= '<%= g.name + ' icon'%>' class="img-fluid rounded-start"/>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= g.name %></h5>
            <p class="card-text"><small class="text-muted"><%= g.created_at.strftime("%d-%b-%Y") %></small></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
